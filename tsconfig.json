{
    "ts-node": { "files": true },
    "compilerOptions" : {
        "baseUrl": ".",
        "lib": ["es2020", "DOM"],
        "esModuleInterop": true,
        "paths": {
            "*": ["src/*"],
        },
        "target": "es2020",
        "moduleResolution": "node",
        "module": "esnext",
        "allowJs": true,
        "checkJs": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "resolveJsonModule": true,
        "strict": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationMap": true,
        "outDir": "dist",
    },
    "include": ["src/**/*.js*","src/**/*.mjs*","src/**/*.cjs*","src/**/*.d.ts"],
    "exclude": ["node_modules"]
}